                              </items>
                            </Menu>
                              <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
                                <items>
                                  <MenuItem mnemonicParsing="false" onAction="#helpShow" text="Help &amp; About" />
                                </items>
                              </Menu>
                          </menus>
                        </MenuBar>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Home">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ColorPicker fx:id="colorPicker" layoutX="194.0" layoutY="-2.0" onAction="#updateColor" />
                        <ChoiceBox fx:id="widthChoice" layoutX="44.0" layoutY="-2.0" prefWidth="150.0" />
                        <ToggleButton fx:id="drawToggleButton" layoutY="-2.0" mnemonicParsing="false" onAction="#drawUpdate" text="Draw" />
